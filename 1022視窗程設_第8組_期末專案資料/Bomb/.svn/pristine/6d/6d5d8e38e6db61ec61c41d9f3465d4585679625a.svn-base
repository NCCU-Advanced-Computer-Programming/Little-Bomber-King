<Window x:Class="Bomb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="960" Width="1280" Background="#FF2B5091" Loaded="Window_Loaded">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="1*"/>
    		<RowDefinition Height="800"/>
    		<RowDefinition Height="1*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="11"/>
			<ColumnDefinition Width="800"/>
    		<ColumnDefinition Width="11"/>
    		<ColumnDefinition Width="450"/>
    	</Grid.ColumnDefinitions>
    	
    	<Border BorderBrush="White" BorderThickness="1" Grid.Column="1" Grid.Row="1" CornerRadius="5" VerticalAlignment="Bottom">
    		<Canvas x:Name="cvsScene" Background="White"  Height="800"  Width="800" />
		</Border>
		<Border BorderThickness="1" Grid.Column="3" Margin="10" Grid.Row="1" CornerRadius="5" Background="#FFC1E8FF"/>
		
    </Grid>
</Window>
