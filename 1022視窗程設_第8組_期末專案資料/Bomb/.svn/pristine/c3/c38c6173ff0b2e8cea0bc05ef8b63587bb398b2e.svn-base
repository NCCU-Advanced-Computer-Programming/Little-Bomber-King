<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Bomb.PlayerInfoPanel"
	x:Name="UserControl"
	d:DesignWidth="428" d:DesignHeight="180" Loaded="UserControl_Loaded">

	<Grid x:Name="LayoutRoot" Margin="0" Height="180" Width="428">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="96"/>
						<ColumnDefinition Width="84"/>
						<ColumnDefinition Width="96"/>
						<ColumnDefinition Width="152"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*"/>
						<RowDefinition Height="1*"/>
						<RowDefinition Height="1*"/>
						<RowDefinition Height="1*"/>
						<RowDefinition Height="1"/>
					</Grid.RowDefinitions>
					<Border Grid.ColumnSpan="4" Margin="10" CornerRadius="5" BorderThickness="1" Background="{DynamicResource playerInfoFillBrush}" BorderBrush="{DynamicResource playerInfoBoderBrush}" Grid.RowSpan="5">
						
					</Border>
					<Image x:Name="imgFace" Margin="42,19" Grid.ColumnSpan="2" Grid.RowSpan="3" Source="Images/Tiles/Face1.png"/>
					<TextBlock Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="Power :" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" HorizontalAlignment="Right">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<TextBlock Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="Attack :" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" Grid.Row="1" HorizontalAlignment="Right">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<TextBlock Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="Speed :" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" Grid.Row="2" HorizontalAlignment="Right">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<TextBlock x:Name="lblPower" Grid.Column="3" Margin="0" TextWrapping="Wrap" Text="Power" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<TextBlock x:Name="lblAtk" Grid.Column="3" Margin="0" TextWrapping="Wrap" Text="Power" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" Grid.Row="1">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<TextBlock x:Name="lblSpeed" Grid.Column="3" Margin="0" TextWrapping="Wrap" Text="Power" Height="25" TextAlignment="Center" FontSize="18.667" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" Grid.Row="2">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>

					</TextBlock>
					<TextBlock Margin="0,10,0,19.75" TextWrapping="Wrap" Text="HP :" Height="15" TextAlignment="Right" TextDecorations="{x:Null}" FontFamily="Microsoft YaHei" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Width="86">
						<TextBlock.Foreground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#FF070097" Offset="0"/>
								<GradientStop Color="#FF5A56BA" Offset="0.503"/>
								<GradientStop Color="#FF18129E" Offset="1"/>
							</LinearGradientBrush>
						</TextBlock.Foreground>
					</TextBlock>
					<Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="10,10,28,19.75" BorderBrush="{DynamicResource playerInfoBoderBrush}" BorderThickness="1">
						<Rectangle x:Name="rectHp" Margin="0,0,59.333,0">
						<Rectangle.Fill>
							<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
								<GradientStop Color="#FFCB0000" Offset="1"/>
								<GradientStop Color="#FFCB6E6E" Offset="0.244"/>
							</LinearGradientBrush>
						</Rectangle.Fill>
					</Rectangle>
					</Border>
					
				</Grid>
</UserControl>